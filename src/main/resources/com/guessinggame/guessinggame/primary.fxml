<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guessinggame.guessinggame.PrimaryController">
   <children>
      <VBox prefHeight="341.0" prefWidth="260.0">
         <children>
            <Button mnemonicParsing="false" fx:id="LoadBtn" onAction="#handleLoadClick" text="Load a Game">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" text="Save a game">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" text="Display the tree">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" text="Play a game">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Button>
         </children>
         <HBox.margin>
            <Insets top="80.0" />
         </HBox.margin>
      </VBox>
      <VBox minWidth="250.0" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Animal Guessing Game">
               <VBox.margin>
                  <Insets left="80.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TextArea minHeight="300.0" minWidth="300.0" prefHeight="200.0" prefWidth="175.0">
               <VBox.margin>
                  <Insets right="500.0" top="20.0" />
               </VBox.margin>
            </TextArea>
            <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="59.0" text="Exit">
               <VBox.margin>
                  <Insets left="200.0" top="30.0" />
               </VBox.margin>
            </Button>
         </children>
         <HBox.margin>
            <Insets bottom="170.0" left="80.0" right="100.0" top="120.0" />
         </HBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</HBox>

